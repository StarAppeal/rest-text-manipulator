{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["ES2021.String"],
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["src/*", "dist/*"]
        }
    },
    "include": ["src/**/*"]
}
